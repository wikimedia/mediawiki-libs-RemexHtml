{
	"name": "wikimedia/remex-html",
	"description": "Fast HTML 5 parser",
	"license": "MIT",
	"homepage": "https://www.mediawiki.org/wiki/RemexHtml",
	"authors": [
		{
			"name": "Tim Starling",
			"email": "tstarling@wikimedia.org"
		}
	],
	"autoload": {
		"psr-4": {
			"RemexHtml\\": "src/",
			"Wikimedia\\RemexHtml\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"RemexHtml\\FuzzTest\\": "tools/FuzzTest/",
			"Wikimedia\\RemexHtml\\Tools\\": "tools/",
			"Wikimedia\\RemexHtml\\Tests\\": "tests/phpunit/"
		}
	},
	"require": {
		"php": ">=7.2.9",
		"ext-mbstring": "*",
		"ext-dom": "*",
		"wikimedia/utfnormal": "1.1.0 || 2.0.0 || ^3.0.1"
	},
	"require-dev": {
		"ext-json": "*",
		"mediawiki/mediawiki-codesniffer": "37.0.0",
		"mediawiki/mediawiki-phan-config": "0.10.6",
		"mediawiki/minus-x": "1.1.1",
		"ockcyp/covers-validator": "1.3.3",
		"php-parallel-lint/php-console-highlighter": "0.5.0",
		"php-parallel-lint/php-parallel-lint": "1.3.0",
		"phpunit/phpunit": "^8.5 || ^9.5"
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor",
			"phpunit",
			"covers-validator",
			"phpcs -sp",
			"minus-x check .",
			"@phan"
		],
		"cover": "phpunit --coverage-html coverage",
		"phan": "phan -p --allow-polyfill-parser --long-progress-bar",
		"fix": [
			"minus-x fix .",
			"phpcbf"
		],
		"generate-htmldata": "php bin/generate-htmldata",
		"update-changelog": "php bin/update-changelog"
	}
}
